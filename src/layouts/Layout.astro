---
const { title } = Astro.props;

interface Props {
    title: string;
}

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="flex justify-start flex-col min-h-screen items-center m-0 gap-0 p-0"
    >
        <span
            class="bg-[#FECC59] text-black w-full sticky top-0 flex justify-center items-center gap-4 py-2"
        >
            <h3 class="font-semibold">
                Si estàs en una crisi, si us plau posa’t en contacte.
            </h3>
            <button
                class="bg-[#335556] px-5 py-2 rounded-full text-white text-xs"
                >DEMANA AJUDA</button
            >
        </span>
        <nav class="flex px-16 py-4 max-w-screen-xl w-full justify-between">
            <a href="/">
                <img src="/Logo.svg" alt="logo" class="w-20 mr-4" />
            </a>
            <div class="flex items-center gap-4 text-[#5F5E5D]">
                <a
                    href="/nosaltres"
                    class=`${currentPath ==="nosaltres"? "text-black font-semibold " :""}`
                    >Nosaltres</a
                >
                <a href="">Serveis</a>
                <a href="">Recursos</a>
                <a href="">Projectes</a>
                <a href="">Participa</a>
                <a href="">Contacta</a>
                <a
                    href=""
                    class="bg-[#FECC59] px-4 py-2 rounded-full text-black font-semibold"
                    >Donatiu</a
                >
            </div>
        </nav>
        <slot />

        <footer class="w-full flex justify-center">
            <div
                class="flex flex-row justify-between items-center px-16 pb-8 pt-10 max-w-screen-xl w-full"
            >
                <div class="flex justify-center w-[40%]">
                    <img src="/Logo.svg" alt="logo" class="w-20 mr-4" />
                </div>
                <div
                    class="flex flex-col items-center gap-4 text-[#5F5E5D] w-[45%]"
                >
                    <a
                        href=""
                        class="bg-[#FECC59] rounded-full w-full px-5 py-3 text-[#1D1D1B] flex justify-between items-center"
                    >
                        <p>Demana ajuda</p>

                        <img src="/chevronRight.svg" alt="icona" width="20" />
                    </a>
                    <a
                        href=""
                        class="bg-[#FECC59] rounded-full w-full px-5 py-3 text-[#1D1D1B] flex justify-between items-center"
                    >
                        <p>Sigues un acompanyant</p>

                        <img src="/chevronRight.svg" alt="icona" width="20" />
                    </a><a
                        href=""
                        class="bg-[#FECC59] rounded-full w-full px-5 py-3 text-[#1D1D1B] flex justify-between items-center"
                    >
                        <p>Recursos digitals</p>

                        <img src="/chevronRight.svg" alt="icona" width="20" />
                    </a>
                </div>
            </div>
        </footer>

        <style is:global>
            :root {
                --accent: 136, 58, 234;
                --accent-light: 224, 204, 250;
                --accent-dark: 49, 10, 101;
                --accent-gradient: linear-gradient(
                    45deg,
                    rgb(var(--accent)),
                    rgb(var(--accent-light)) 30%,
                    white 60%
                );
            }
            html {
                font-family: system-ui, sans-serif;
                background: #fffaf2;
                background-size: 224px;
                color: #1d1d1b;
                scrollbar-width: thin;
                scrollbar-color: #fecc59 #fffaf2;
                scroll-behavior: smooth;
            }

            h1 {
                font-family: "Instrument Serif", serif;
            }
        </style>
    </body>
</html>
